{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 350,
  "height": 300,
  "title": {
    "text": "Top and bottom 5 Countries by Homicide Rate",
    "anchor": "middle",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Tricia-wijaya/FIT3179/main/Assignment/HomicideData.csv",
      "format": {
        "type": "csv",
        "parse": {"Country": "string"},
        "delimiter": ","
      },
      "transform": [
        {
          "type": "filter",
          "expr": "indexof([\"El Salvador\",\"Belize\",\"Jamaica\",\"Venezuela\",\"Honduras\",\"Australia\",\"Norway\",\"Luxembourg\",\"Qatar\",\"Japan\",\"Singapore\"], datum[\"Country\"]) !== -1"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"Rate\"]) && isFinite(+datum[\"Rate\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "indexof([\"Australia\"], datum[\"Country\"]) !== -1",
              "scale": "color",
              "field": "Country"
            },
            {"value": "steelblue"}
          ],
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Region\": isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"], \"Rate\": format(datum[\"Rate\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Homicide Rate: \" + (format(datum[\"Rate\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Region: \" + (isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"]) + \"; Rate: \" + (format(datum[\"Rate\"], \"\"))"
          },
          "x": {"scale": "x", "field": "Rate"},
          "x2": {"scale": "x", "value": 0},
          "y": {"scale": "y", "field": "Country"},
          "height": {"scale": "y", "band": 1}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "dx": {"value": 3},
          "fill": {"value": "black"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Region\": isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"], \"Rate\": format(datum[\"Rate\"], \"\")}"
          },
          "description": {
            "signal": "\"Homicide Rate: \" + (format(datum[\"Rate\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Region: \" + (isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"]) + \"; Rate: \" + (format(datum[\"Rate\"], \"\"))"
          },
          "x": {"scale": "x", "field": "Rate"},
          "y": {"scale": "y", "field": "Country", "band": 0.5},
          "text": {"signal": "format(datum[\"Rate\"], \"\")"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "data_0", "field": "Rate"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Country",
        "sort": {"op": "average", "field": "Rate", "order": "descending"}
      },
      "range": [0, {"signal": "height"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["Australia"],
      "range": ["#B22222"]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Homicide Rate",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {"scale": "y", "orient": "left", "grid": false, "zindex": 0}
  ],
  "config": {}
}
